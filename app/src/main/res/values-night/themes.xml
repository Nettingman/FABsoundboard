<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ActionBarDark" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/shade_black</item>
    </style>
    
    <!-- Base application theme. -->
    <style name="Theme.FABsoundboard" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/flu_purple</item>
        <item name="colorPrimaryVariant">@color/flu_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/flu_green</item>
        <item name="colorSecondaryVariant">@color/flu_green_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarDark</item>
    </style>
</resources>